void testSelect() {
  struct timeval tv;
  tv.tv_sec = 10;
  tv.tv_usec = 10 * 1000;  //microseconds
  while (1) {
    select(0, NULL, NULL, NULL, &tv);
    std::cout << "xxxxx " << std::endl;
  }
}

void testMemset() {
  int c = 0x44332211;
  int s = 0;
  memset((void*)&s, c, sizeof(s));
  std::cout << std::setbase(16) << s << std::endl;

  int a = 0x000011;
  int b = 0x01010101;

  std::cout << std::setbase(16) << a * b << std::endl;
}

